<%- contentFor('breadcrumb') %>

<div class="row">
    <div class="col-12">
        <div
            class="page-title-box d-sm-flex align-items-center justify-content-between"
        >
            <h4 class="mb-sm-0">Master Program</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item active">Program</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<%- contentFor('body') %>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <table
                    id="datatable"
                    class="table table-bordered dt-responsive nowrap"
                    style="
                        border-collapse: collapse;
                        border-spacing: 0;
                        width: 100%;
                    "
                >
                    <thead>
                        <tr>
                            <th>ID Program</th>
                            <th>Nama Program</th>
                            <th>Jenis Program</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% programs.forEach(program => { %>
                        <tr>
                            <td><%= program.program_id %></td>
                            <td><%= program.program_name %></td>
                            <td><%= program.program_category %></td>
                            <td>
                                <button type="button" class="btn btn-warning btn-sm waves-effect waves-light" fdprocessedid="jzw0r">
                                    Edit <i class="fas fa-pencil-alt align-middle ms-2"></i> 
                                </button>
                                <button type="button" class="btn btn-danger btn-sm waves-effect waves-light" fdprocessedid="jzw0r">
                                    Delete <i class="fas fa-trash align-middle ms-2"></i> 
                                </button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>

