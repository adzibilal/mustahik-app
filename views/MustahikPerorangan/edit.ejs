<%- contentFor('HeaderCss') %>
<link
    href="public/assets/libs/select2/css/select2.min.css"
    rel="stylesheet"
    type="text/css"
/>

<%- contentFor('breadcrumb') %>

<div class="row">
    <div class="col-12">
        <div
            class="page-title-box d-sm-flex align-items-center justify-content-between"
        >
            <h4 class="mb-sm-0">Edit Mustahik Perorangan</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a href="mustahik-perorangan">Mustahik Perorangan</a>
                    </li>
                    <li class="breadcrumb-item active">Edit Mustahik Perorangan</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<%- contentFor('body') %>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form
                    class="custom-validation"
                    action="/mustahik-perorangan/edit/<%= mustahik.mustahik_perorangan_id %>"
                    method="POST"
                >   
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label>Fullname</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    required
                                    placeholder="Masukan Fullname"
                                    name="fullname"
                                    id="fullname"
                                    value="<%= mustahik.fullname %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">KTP Number</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    required
                                    placeholder="Masukan KTP Number"
                                    name="ktp_number"
                                    id="ktp_number"
                                    value="<%= mustahik.ktp_number %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Tanggal Lahir</label>
                                <input
                                    type="date"
                                    class="form-control"
                                    required
                                    name="tgl_lahir"
                                    id="tgl_lahir"
                                    value="<%= mustahik.tgl_lahir.toISOString().slice(0, 10) %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Tempat Lahir</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    required
                                    placeholder="Masukan Tempat Lahir"
                                    name="tempat_lahir"
                                    id="tempat_lahir"
                                    value="<%= mustahik.tempat_lahir %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Had Kipayah</label>
                                <input
                                    type="number"
                                    class="form-control"
                                    required
                                    placeholder="Masukan Had Kipayah"
                                    name="had_kipayah"
                                    id="had_kipayah"
                                    value="<%= mustahik.had_kipayah %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Jumlah Tanggungan</label>
                                <input
                                    type="number"
                                    class="form-control"
                                    required
                                    placeholder="Masukan Jumlah Tanggungan"
                                    name="jumlah_tanggungan"
                                    id="jumlah_tanggungan"
                                    value="<%= mustahik.jumlah_tanggungan %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Penghasilan</label>
                                <input
                                    type="number"
                                    class="form-control"
                                    required
                                    placeholder="Masukan Penghasilan"
                                    name="penghasilan"
                                    id="penghasilan"
                                    value="<%= mustahik.penghasilan %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Gender</label>
                                <select
                                    class="form-control"
                                    name="gender"
                                    id="gender"
                                    required
                                >
                                    <option>Pilih Gender</option>
                                    <option value="pria" <%= mustahik.gender === 'pria' ? 'selected' : '' %>>Pria</option>
                                    <option value="wanita" <%= mustahik.gender === 'wanita' ? 'selected' : '' %>>Wanita</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Alamat</label>
                                <textarea
                                    class="form-control"
                                    name="alamat"
                                    id="alamat"
                                    required
                                ><%= mustahik.alamat %></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Negara</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="negara"
                                    id="negara"
                                    required
                                    value="<%= mustahik.negara %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Provinsi</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="provinsi"
                                    id="provinsi"
                                    required
                                    value="<%= mustahik.provinsi %>"

                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Kota/Kabupaten</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="kota_kab"
                                    id="kota_kab"
                                    required
                                    value="<%= mustahik.kota_kab %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Kecamatan</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="kec"
                                    id="kec"
                                    required
                                    value="<%= mustahik.kec %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Kelurahan/Desa</label>
                                <input
                                    type="text"
                                    class="form-control"
                                    name="kel_desa"
                                    id="kel_desa"
                                    required
                                    value="<%= mustahik.kel_desa %>"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Status Menikah</label>
                                <select
                                    class="form-control"
                                    name="status_menikah"
                                    id="status_menikah"
                                    required
                                >
                                    <option>Pilih Status Menikah</option>
                                    <option value="menikah" <%= mustahik.status_menikah === 'menikah' ? 'selected' : '' %>>Menikah</option>
                                    <option value="belum_menikah" <%= mustahik.status_menikah === 'belum_menikah' ? 'selected' : '' %>>Belum Menikah</option>
                                    <option value="janda" <%= mustahik.status_menikah === 'janda' ? 'selected' : '' %>>Janda</option>
                                    <option value="duda" <%= mustahik.status_menikah === 'duda' ? 'selected' : '' %>>Duda</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Jenis Mustahik</label>
                                <select
                                    class="form-control"
                                    name="jenis_mustahik"
                                    id="jenis_mustahik"
                                    required
                                >
                                    <option>Pilih Jenis Mustahik</option>
                                    <option value="distribusi" <%= mustahik.jenis_mustahik === 'distribusi' ? 'selected' : '' %>>Distribusi</option>
                                    <option value="pemberdayaan" <%= mustahik.jenis_mustahik === 'pemberdayaan' ? 'selected' : '' %>>Pemberdayaan</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Asnaf Mustahik</label>
                                <select
                                    class="form-control"
                                    name="asnaf_mustahik"
                                    id="asnaf_mustahik"
                                    required
                                >
                                    <option>Pilih Asnaf Mustahik</option>
                                    <option value="fakir" <%= mustahik.asnaf_mustahik === 'fakir' ? 'selected' : '' %>>Fakir</option>
                                    <option value="miskin" <%= mustahik.asnaf_mustahik === 'miskin' ? 'selected' : '' %>>Miskin</option>
                                    <option value="fisabilillah" <%= mustahik.asnaf_mustahik === 'fisabilillah' ? 'selected' : '' %>>Fisabilillah</option>
                                    <option value="amil" <%= mustahik.asnaf_mustahik === 'amil' ? 'selected' : '' %>>Amil</option>
                                    <option value="gharimin" <%= mustahik.asnaf_mustahik === 'gharimin' ? 'selected' : '' %>>Gharimin</option>
                                    <option value="musafir" <%= mustahik.asnaf_mustahik === 'musafir' ? 'selected' : '' %>>Musafir</option>
                                    <option value="mualaf" <%= mustahik.asnaf_mustahik === 'mualaf' ? 'selected' : '' %>>Mualaf</option>
                                    <option value="hamba sahaya" <%= mustahik.asnaf_mustahik === 'hamba sahaya' ? 'selected' : '' %>>Hamba Sahaya</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Foto</label>
                                <input
                                    type="file"
                                    class="form-control"
                                    name="url_photo"
                                    disabled
                                    id="url_photo"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">KTP</label>
                                <input
                                    type="file"
                                    class="form-control"
                                    name="url_ktp_file"
                                    disabled
                                    id="url_ktp_file"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">KK</label>
                                <input
                                    type="file"
                                    class="form-control"
                                    name="url_kk_file"
                                    disabled
                                    id="url_kk_file"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">SKTM</label>
                                <input
                                    type="file"
                                    class="form-control"
                                    name="url_sktm_file"
                                    disabled
                                    id="url_sktm_file"
                                />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Dokumen Lainnya</label>
                                <input
                                    type="file"
                                    class="form-control"
                                    name="url_docs_lain"
                                    disabled
                                    id="url_docs_lain"
                                />
                            </div>
                        </div>
                    </div>

                    <div class="mb-0">
                        <div>
                            <button
                                type="submit"
                                class="btn btn-primary waves-effect waves-light me-1"
                            >
                                Update
                            </button>
                            <a
                                href="/mustahik-perorangan"
                                class="btn btn-secondary waves-effect"
                            >
                                Cancel
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- end col -->
</div>
<!-- end row -->

<%- contentFor('FooterJs') %>

<script src="public/assets/libs/parsleyjs/parsley.min.js"></script>

<script src="public/assets/js/pages/form-validation.init.js"></script>
<script src="public/assets/libs/select2/js/select2.min.js"></script>

<script src="public/assets/js/pages/form-advanced.init.js"></script>

<%- contentFor('BottomJs') %>
